<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.mwas.bean.FutureMaker" table="Profile">
        <id name="FM_ID" type="long" column="fmid">
            <generator class="native"/>
        </id>
        <property name="name" type="string" column="name"/>
        <property name="aboutMe" type="string" column="aboutme"/>
        <bag name="educationHistory" cascade="all">
            <key column="fmid"/>
            <one-to-many class="com.mwas.entities.Education"/>
        </bag>
        <bag name="workHistory" cascade="all">
            <key column="fmid"/>
            <one-to-many class="come.mwas.entities.Work"/>
        </bag>
     </class>
        <class name="com.mwas.entities.Education" table="education">
            <id name="FM_ID" type="long" column="fmid">
            <generator class="native"/>
       		</id>
            <property name="university" type="string"/>
       	    <property name="college" type="string"/>
       	    <property name="startDate" type="date"/>
       	    <property name="endDate" type="date"/>
       	    <property name="major" type="string"/>
       	    <property name="degree" type="string"/>
       	    <property name="percentile" type="float"/>
       	    <property name="remarks" type="string"/>
        </class>
        <class name="come.mwas.entities.Work" table="workhistory">
          <!-- <composite-element > </composite-element>-->   
              <id name="FM_ID" type="long" column="fmid">
            		<generator class="native"/>
        	  </id>
               <property name="company" type="string"/> 
               <property name="division" type="string"/>
               <property name="startDate" type="date"/>
               <property name="endDate" type="date"/>
               <property name="designation" type="string"/> 
    	</class>
</hibernate-mapping>