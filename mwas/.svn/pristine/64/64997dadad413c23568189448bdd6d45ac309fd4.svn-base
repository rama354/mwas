@CHARSET "ISO-8859-1";

#menu{
	display: block;
	border: medium ridge black;
	width: 80%;
	height:auto;
	padding: 20px;
	-webkit-border-radius: 20px;
	-moz-border-radius: 20px;
	-webkit-box-shadow: -5px 5px 8px 2px grey;
	-mozkit-box-shadow: -5px 5px 8px 2px grey;
}

.menubar{
	padding:10px;
	width: 60%;	
}

.menubar tr td button
{ 
    width:100%;
	background-color: #FA2;
	text-shadow: 0px 1px 0px #ffffff;
	filter: dropshadow(color=#ffffff,offX=0,offY=1);  /*IE*/
	-webkit-box-shadow: rgba(0, 0, 0, 0.2) 0 2px 1px 1px;
	font-weight: 700;
	-webkit-border-radius: 5px;
	font-family: 'Helvetica Neue', Arial, sans-serif;
}
	
	
	
